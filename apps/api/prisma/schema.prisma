generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  entries      Entry[]
  topics       Topic[]
}

model Entry {
  id        String        @id @default(cuid())
  userId    String

  /**
   * clientId
   * - Optional for backward compatibility with older clients/imports.
   * - When provided by mobile, it becomes the stable identifier for sync.
   */
  clientId  String?

  dayKey    String
  category  EntryCategory
  title     String
  author    String        @default("")
  url       String        @default("")
  notes     String        @default("")
  rating    Int           @default(5)
  wordCount Int?
  tags      String[]      @default([])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Existing uniqueness rule (keeps your current API/web semantics intact)
  @@unique([userId, dayKey, category])

  // New: allow idempotent upsert by clientId when present
  @@unique([userId, clientId])

  @@index([userId, dayKey])
  @@index([userId, clientId])
}

model Topic {
  id        String      @id @default(cuid())
  userId    String
  clientId  String

  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     TopicItem[]

  @@unique([userId, clientId])
  @@index([userId])
  @@index([userId, clientId])
}

model TopicItem {
  id         String       @id @default(cuid())
  topicId    String
  clientId   String

  title      String
  url        String       @default("")
  category   ItemCategory
  author     String       @default("")
  wordCount  Int?
  notes      String       @default("")
  tags       String[]     @default([])
  finished   Boolean      @default(false)
  finishedAt DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  topic      Topic        @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([topicId, clientId])
  @@index([topicId])
  @@index([topicId, clientId])
}

enum EntryCategory {
  essay
  story
  poem
}

enum ItemCategory {
  essay
  story
  poem
}